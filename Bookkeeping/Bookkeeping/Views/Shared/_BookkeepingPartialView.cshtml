@model PagedList.IPagedList<Bookkeeping.Models.RecordDatas>
@using PagedList.Mvc;

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@ViewBag.RecordId</td>
                    <td>@record.RecordClass</td>
                    <td>@record.RecordDate</td>
                    <td>@record.RecordAmount</td>
                </tr>
                { ViewBag.RecordId++; }
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
    <div class="col-md-4" style="text-align:right">
        第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 頁，共 @Model.PageCount 頁
    </div>
</div>

